page{
  background-color: #f0f0f0;
}

.list-model{
  font-size: 0;
  padding-bottom: 40rpx;
}
.list-model .title-view{
  position: relative;
}
.title-view .title {
  display: inline-block;
  width: 600rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding-top: 40rpx;
  padding-bottom: 30rpx;
  padding-left: 30rpx;
  font-size: 40rpx;
  font-weight: 400;
  color: #fff;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.title-view .notifications{
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 40rpx;
  height: 40rpx;
}

.last-view {
  position: relative;
  font-size: 32rpx;
  text-align: center;
  height: 150rpx;
  color: #fff;
}
.last-view .left-text {
  position: absolute;
  left: 30rpx;
  height: 150rpx;
  line-height: 150rpx;
}
.last-view .right-text {
  position: absolute;
  right: 30rpx;
  height: 150rpx;
  line-height: 150rpx;
}
.last-view .center-text {
  height: 150rpx;
  line-height: 150rpx;
  font-size: 88rpx;
}

.des-view {
  font-size: 28rpx;
  color: #fff;
  padding: 10rpx 30rpx 0;
}

.invite-view{
  font-size: 28rpx;
  color: #fff;
}
.invite-view .invite-number{
 padding: 30rpx;
 color: #666;
}
.invite-view .invite-icons{
  background-color: #fff;
  padding: 30rpx 0 30rpx 30rpx;
}
.invite-view .invite-icon{
  width: 76rpx;
  height: 76rpx;
  border-radius: 38rpx;
  vertical-align: top;
  margin-right: 20rpx;
}

.no-invite-view {
  padding: 160rpx 30rpx;
  color: #999;
  text-align: center;
}
.no-invite{
  font-size: 32rpx;
  line-height: 50rpx;
}

.invite-btn-view {
  position: fixed;
  width: 750rpx;
  left: 0;
  bottom: 80rpx;
  display: flex;
  justify-content: center;
}

.invite-btn{
  width: 320rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 40rpx;
  color: #fff;
  font-size: 32rpx;
}

.invite-btn::after{
  border: none;
}