page{
  background-color: #f0f0f0;
}

.list-model{
  font-size: 0;
  min-height: 380rpx;
}
.list-model .title-view{
  position: relative;
}
.title-view .title {
  display: inline-block;
  width: 600rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding-top: 40rpx;
  padding-bottom: 30rpx;
  padding-left: 40rpx;
  font-size: 44rpx;
  font-weight: 400;
  color: #fff;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.title-view .notifications{
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 40rpx;
  height: 40rpx;
}

.date-view{
  font-size: 28rpx;
  color: #fff;
  padding: 0rpx 40rpx 0rpx;
}

.last-view {
  position: relative;
  font-size: 28rpx;
  text-align: center;
  height: 180rpx;
  color: #fff;
  margin-bottom: 20rpx;
}
.last-view .left-text {
  position: absolute;
  left: 80rpx;
  height: 180rpx;
  line-height: 180rpx;
}
.last-view .right-text {
  position: absolute;
  right: 80rpx;
  height: 180rpx;
  line-height: 180rpx;
}
.last-view .center-text {
  height: 180rpx;
  line-height: 180rpx;
  font-size: 144rpx;
}

.des-view {
  font-size: 24rpx;
  color: #fff;
  padding: 20rpx 40rpx 0px;
}

.des-center {
  background-color: rgba(0,0,0,0.3);
  padding: 30rpx 20rpx;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
}

.invite-view{
  font-size: 28rpx;
  color: #fff;
}
.invite-view .invite-number{
 padding: 30rpx;
 color: #666;
}
.invite-view .invite-icons{
  background-color: #fff;
  padding: 30rpx 0 30rpx 30rpx;
}
.invite-view .invite-icon{
  width: 76rpx;
  height: 76rpx;
  border-radius: 38rpx;
  vertical-align: top;
  margin-right: 20rpx;
}

.no-invite-view {
  padding: 160rpx 30rpx;
  color: rgb(153, 153, 153);
  text-align: center;
}
.no-invite{
  font-size: 28rpx;
  line-height: 50rpx;
}

.invite-btn-view {
  position: fixed;
  width: 750rpx;
  left: 0;
  bottom: 80rpx;
  display: flex;
  justify-content: center;
}

.invite-btn{
  width: 320rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 40rpx;
  color: #fff;
  font-size: 32rpx;
}

.invite-btn::after{
  border: none;
}

.edit-view{
  position: absolute;
  top: 50rpx;
  right: 40rpx;
  font-size: 28rpx;
  color: #fff;
}