.title-view {
  padding: 30rpx 30rpx;
}
.title-view .title-input {
  font-size: 32rpx;
  border-bottom: 1px solid #f0f0f0;
  height: 80rpx;
  color: #333;
}

.date-view,.period-view,.repeat-view{
  padding: 0 30rpx;
  font-size: 32rpx;
  height: 90rpx; 
}

.period-view.is-norepeat {
  color: #ccc;
}

.repeat-view{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date-view .picker,.period-view .picker{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
}

.date-view .next-image,.period-view .next-image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 20rpx;
}

.des-view {
  padding: 0 30rpx;
  font-size: 32rpx;
}

.des-view .des-title {
  height: 90rpx;
  line-height: 90rpx;
}

.des-view .des{
  min-height: 160rpx;
}

.des-view .des .des-textarea{
  font-size: 32rpx;
  width: 690rpx;
  color: #333;
}

.button-view{
  margin-top: 30rpx;
}

.button-view .save-btn{
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  background: #ee5e7b;
  padding: 0;
}

/*swtich整体大小及背景色*/
.wx-switch-input{
    width:82rpx !important;
    height:40rpx !important; 
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
    width:78rpx !important;
    height: 36rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
    width: 36rpx !important;
    height: 36rpx !important;
}